<launch>
    <arg name="model" default="$(find libro_model)/urdf/libro_main.xacro"/>
    <arg name="rviz_config" default="$(find libro_model)/urdf.rviz"/>
    <arg name="use_gui" default="true"/>

    <!-- rosparam -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)"/>
    <!-- load control pid info -->
    <rosparam file="$(find libro_model)/config/libro_control.yaml" command="load"/>
    
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

    <!-- gazebo -->
    <include file="$(find libro_model)/launch/gazebo_world.launch" />
    <!-- gmapping -->
    <include file="$(find libro_model)/launch/gmapping.launch" />

    <!-- spawn model -->
    <node name="robot_gazebo_spawner" pkg="gazebo_ros" type="spawn_model" args="-urdf -model rbo -param robot_description" />

    <!-- rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)" />

    <!-- libro_model keyboard teleop control -->
    <!-- <node name="libro_teleop_publisher" pkg="libro_model" type="libro_teleop.py" /> -->
</launch>
